
<div class="span9">
  <br></br>
</div>


<div class="container">
 <div class="span4">

  <h1>Items</h1>
    <table class ="table">
      <tr>
        <th>
          Image
        </th>
        <th>
          Description
        </th>
        <th>
          Actions
        </th>
      </tr>

      <% @products.each do |product| %>
     <tr>
        <td>
          <%= image_tag(product.image_url, class: 'list_image') %>
        </td>

        <td>
            <dt><%= product.title %></dt>
            <dd><%= truncate(strip_tags(product.description),
                             length: 200) %></dd>
        </td>

        <td>
          <%= link_to 'Show', product,class: "btn btn-sm btn-primary" %><br/>
          <%= link_to 'Edit', edit_product_path(product),class: "btn btn-sm btn-warning"  %><br/>
          <%= link_to 'Destroy', product, class: "btn btn-sm btn-danger",
                      confirm: 'Are you sure?',
                      method: :delete %>
        </td>
      </tr>
  <% end %>
 </table>
 </div>
</div>

<br />
<%= link_to 'New product', new_product_path %>
