
<div class="span9">
  <br></br>
  <br></br>
</div>


<div class="container">
 <div class="row-fluid">
      <div class = "table-responsive">
        <table class ="table table-striped table-hover">
          <tr>
            <th>
              Image
            </th>
            <th>
              Description
            </th>
            <th>
              Actions
            </th>
          </tr>

          <% @products.each do |product| %>
                 <tr>
                    <td>
                      <%= image_tag(product.image_url, class: '') %>
                    </td>

                    <td>
                        <dt><%= product.title %></dt>
                        <dd><%= truncate(strip_tags(product.description),
                                         length: 200) %></dd>
                    </td>

                    <td>
                      <%= link_to 'Show', product,class:" " %><br/>
                      <%= link_to 'Edit', edit_product_path(product),class: ""  %><br/>
                      <%= link_to 'Destroy', product, class: "",
                                  confirm: 'Are you sure?',
                                  method: :delete %>
                    </td>
                  </tr>
            <% end %>
        </table>
    </div>
   <%= link_to 'New product', new_product_path, class:"btn btn-default" %>

 </div>
</div>

